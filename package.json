{
  "name": "school-dev",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run convex:dev & next dev --turbo",
    "build": "next build --turbo",
    "build:vercel": "next build --turbo",
    "vercel-build": "SKIP_ENV_VALIDATION=true DISABLE_ESLINT_PLUGIN=true ESLINT_NO_DEV_ERRORS=true next build --turbo",
    "postinstall": "echo 'Convex setup complete'",
    "build:production": "next build --turbo",
    "start": "next start -p 3000",
    "lint": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --write . --cache",
    "prettier:check": "prettier --check . --cache",
    "type-check": "tsc --noEmit",
    "format": "npm run prettier && npm run lint:fix",
    "setup-dev": "./scripts/setup-dev.sh",
    "convex:dev": "npx convex dev",
    "convex:deploy": "npx convex deploy",
    "convex:dashboard": "npx convex dashboard",
    "verify-env": "tsx scripts/verify-env.ts",
    "create-admin": "tsx scripts/create-admin.ts",
    "analyze": "ANALYZE=true npm run build --turbo",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:a11y": "playwright test tests/e2e/accessibility",
    "test:a11y:automation": "playwright test tests/e2e/accessibility/accessibility-automation.spec.ts",
    "test:visual": "playwright test tests/visual",
    "test:integration": "vitest run tests/integration",
    "test:performance": "lhci autorun",
    "test:performance:load": "playwright test tests/performance/load-testing.spec.ts",
    "test:performance:lighthouse": "playwright test tests/performance/lighthouse.spec.ts",
    "test:performance:database": "playwright test tests/performance/database-performance.spec.ts",
    "test:performance:all": "npm run test:performance:lighthouse && npm run test:performance:load && npm run test:performance:database",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:a11y:automation && npm run test:visual && npm run test:performance:all",
    "test:all": "npm run test:comprehensive",
    "test:setup": "playwright install",
    "deploy:dev": "./scripts/deploy-dev.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "deploy:validate": "./scripts/validate-deployment.sh",
    "deploy:verify": "tsx scripts/verify-deployment-readiness.ts",
    "predeploy:prod": "npm run deploy:verify && echo 'âœ… Deployment verification passed'",
    "env:status": "./scripts/env-status.sh",
    "check-branches": "./scripts/check-deprecated-branches.sh",
    "git:status": "git status && echo 'Remote sync:' && git rev-list --count --left-right @{upstream}...HEAD 2>/dev/null || echo 'No remote tracking'",
    "git:check-sync": "npm run git:status && npm run deploy:verify",
    "git:fix-tracking": "tsx scripts/fix-branch-tracking.ts fix",
    "git:check-tracking": "tsx scripts/fix-branch-tracking.ts status",
    "git:health-check": "npm run git:check-tracking && npm run git:check-sync"
  },
  "dependencies": {
